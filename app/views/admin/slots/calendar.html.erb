<div class="admin-calendar-container" 
     data-controller="admin-calendar"
     data-admin-calendar-slots-url-value="/admin/slots.json"
     data-admin-calendar-create-url-value="/admin/slots">
  
  <!-- カレンダー表示エリア -->
  <div class="calendar-wrapper">
    <div id="calendar" data-admin-calendar-target="calendar"></div>
  </div>

  <!-- 時間枠作成モーダル -->
  <div id="slot-modal" 
       class="modal hidden" 
       data-admin-calendar-target="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h3>時間枠を作成</h3>
        <button type="button" 
                class="close-btn" 
                data-action="click->admin-calendar#closeModal">
          &times;
        </button>
      </div>
      
      <form data-admin-calendar-target="form" 
            data-action="submit->admin-calendar#createSlot">
        <div class="form-group">
          <label for="slot_start_time">開始時間</label>
          <input type="datetime-local" 
                 id="slot_start_time" 
                 name="slot[start_time]" 
                 required>
        </div>
        
        <div class="form-group">
          <label for="slot_end_time">終了時間</label>
          <input type="datetime-local" 
                 id="slot_end_time" 
                 name="slot[end_time]" 
                 required>
        </div>
        
        <div class="form-group">
          <label for="slot_available">利用可能</label>
          <select id="slot_available" name="slot[available]">
            <option value="true">利用可能</option>
            <option value="false">利用不可</option>
          </select>
        </div>
        
        <div class="form-actions">
          <button type="button" 
                  class="btn btn-secondary" 
                  data-action="click->admin-calendar#closeModal">
            キャンセル
          </button>
          <button type="submit" class="btn btn-primary">
            作成
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

